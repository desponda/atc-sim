{
  "name": "atc-sim",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "onCreateCommand": "npm install -g pnpm@9 && pnpm install",

  "postStartCommand": "pnpm install --frozen-lockfile || echo 'Warning: pnpm install failed. Check container logs or try rebuilding the devcontainer.'",

  "forwardPorts": [3001, 5173],
  "portsAttributes": {
    "3001": { "label": "API / WebSocket", "onAutoForward": "silent" },
    "5173": { "label": "Client (Vite)", "onAutoForward": "openBrowser" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    },
    "codespaces": {
      "repositories": {
        "desponda/homelab-k8s-infra": {
          "permissions": {
            "contents": "write"
          }
        }
      }
    }
  }
}
